{
  "name": "i18n-manager",
  "displayName": "i18n-manager",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
      "explorer/context": [
        {
          "command": "i18n-manager.openManagerWIthSelection",
          "group": "navigation",
          "when": "resourceLangId == json"
        }
      ]
    },
    "commands": [
      {
        "command": "i18n-manager.openManagerWIthSelection",
        "title": "Open with i18n Manager"
      }
    ],
    "configuration": {
      "title": "i18n json editor",
      "properties": {
        "i18nManager.jsonSpace": {
          "default": 2,
          "type": [
            "string",
            "number"
          ],
          "description": "A String or Number that's used to insert white space into the output JSON"
        },
        "i18nManager.lineEnding": {
          "default": "\n",
          "type": [
            "string"
          ],
          "description": "String used to signify the end of a line"
        },
        "i18nManager.supportedFolders": {
          "default": [
            "i18n"
          ],
          "type": "array",
          "description": "An array of folder names that's used to open the extension through the right click (restart required after changing the value)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "8.17.0",
    "@typescript-eslint/parser": "8.17.0",
    "@vscode/test-cli": "0.0.10",
    "@vscode/test-electron": "2.4.1",
    "eslint": "9.16.0",
    "typescript": "5.7.2"
  },
  "dependencies": {
    "sqlite3": "5.1.7"
  }
}
